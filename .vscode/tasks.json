{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy & Launch [SIM]",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}\\.vscode\\scripts\\deploy.py",
        "--lang",
        "${config:rfsuite.deploy.language}",
        "--step",
        "i18n",
        "--step",
        "soundpack",
        "--step",
        "sensors"
      ],
      "options": {
        "env": {
          "RFSUITE_LANG": "${config:rfsuite.deploy.language}",
          "ETHOS_FIRMWARE": "${config:ethos.firmware}"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "RFSuite: Set Deployment Language",
      "type": "shell",
      "command": "node",
      "args": [
        ".vscode/set-language.js",
        "${input:deployLanguage}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Deploy Radio",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}\\.vscode\\scripts\\deploy.py",
        "--radio",
        "--lang",
        "${config:rfsuite.deploy.language}",
        "--step",
        "i18n",
        "--step",
        "soundpack",
        "--step",
        "sensors"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Deploy Radio [Fast]",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}\\.vscode\\scripts\\deploy.py",
        "--fileext",
        "fast",
        "--radio",
        "--lang",
        "${config:rfsuite.deploy.language}",
        "--step",
        "i18n",
        "--step",
        "soundpack"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Deploy Radio + Serial Debug",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}\\.vscode\\scripts\\deploy.py",
        "--radio",
        "--radio-debug",
        "--lang",
        "${config:rfsuite.deploy.language}",
        "--step",
        "i18n",
        "--step",
        "soundpack"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Deploy Radio + Serial Debug [Fast]",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}\\.vscode\\scripts\\deploy.py",
        "--fileext",
        "fast",
        "--radio",
        "--radio-debug",
        "--lang",
        "${config:rfsuite.deploy.language}",
        "--step",
        "i18n",
        "--step",
        "soundpack"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Radio: Serial Debug",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}\\.vscode\\scripts\\deploy.py",
        "--radio",
        "--connect-only",
        "--lang",
        "${config:rfsuite.deploy.language}",
        "--step",
        "i18n",
        "--step",
        "soundpack"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Clear locks",
      "type": "process",
      "command": "python",
      "args": [
        "${workspaceFolder}\\.vscode\\scripts\\deploy.py",
        "--clear-lock"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Run RFSuite Sensor Tool",
      "type": "process",
      "command": "${workspaceFolder}/bin/sensors/sensors.exe",
      "options": {
        "env": {
          "RFSUITE_LANG": "${config:rfsuite.deploy.language}"
        },
        "cwd": "${workspaceFolder}/bin/sensors"
      },
      "problemMatcher": []
    }
  ]
}
