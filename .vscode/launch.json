{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deploy & Launch",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": ["--launch"],
      "console": "integratedTerminal",
      "subProcess": false,          // <- prevents auto-attach to child procs
      "justMyCode": true,
      "stopOnEntry": false,
      "preLaunchTask": "kill deploy"
    },   
    {
      "name": "Deploy & Launch [Fast]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": ["--fileext", "fast", "--launch"],
      "console": "integratedTerminal",
      "subProcess": false,          // <- prevents auto-attach to child procs
      "justMyCode": true,
      "stopOnEntry": false,
      "preLaunchTask": "kill deploy"
    },       
    {
      "name": "Deploy & Choose",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
